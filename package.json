{
    "name": "material-ui-experiments",
    "version": "0.1.0",
    "private": true,
    "author": "alex1kirch@users.noreply.github.com",
    "description": "The repository is designed to study Material-UI. I will try to implement some features and resolve issues encountered in studying.",
    "keywords": [
        "react",
        "react-component",
        "material design",
        "material-ui",
        "experiments"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/alex1kirch/material-ui-experiments.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/alex1kirch/material-ui-experiments/issues"
    },
    "dependencies": {
        "@material-ui/core": "^1.3.1",
        "@material-ui/icons": "^1.1.0",
        "connected-react-router": "^4.3.0",
        "intl": "^1.2.5",
        "intl-locales-supported": "^1.0.0",
        "jss": "^9.8.7",
        "jss-rtl": "^0.2.3",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-helmet": "^5.2.0",
        "react-hot-loader": "^4.3.3",
        "react-intl": "^2.4.0",
        "react-jss": "^8.6.0",
        "react-redux": "^5.0.7",
        "react-router": "^4.3.1",
        "react-router-dom": "^4.3.1",
        "react-scripts-ts": "2.16.0",
        "redux": "^4.0.0"
    },
    "scripts": {
        "start": "react-scripts-ts start",
        "build": "react-scripts-ts build",
        "test": "react-scripts-ts test --env=jsdom",
        "eject": "react-scripts-ts eject",
        "lint-staged": "lint-staged",
        "test:ci": "cross-env CI=true react-scripts-ts test --env=jsdom --maxWorkers 2 --coverage && codecov",
        "prettier:diff": "prettier --parser typescript --list-different \"*.{ts,tsx}\"",
        "ci-check": "yarn prettier:diff && yarn lint",
        "lint": "tslint '*.{ts,tsx}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "prettier --parser typescript --write",
            "git add"
        ],
        "*.{png,jpeg,jpg,gif,svg}": [
            "imagemin-lint-staged",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.11",
        "@types/enzyme-adapter-react-16": "^1.0.2",
        "@types/intl": "^1.2.0",
        "@types/intl-locales-supported": "^1.0.0",
        "@types/jest": "^23.1.4",
        "@types/jss": "^9.5.3",
        "@types/node": "^10.5.1",
        "@types/react": "^16.4.6",
        "@types/react-dom": "^16.0.6",
        "@types/react-helmet": "^5.0.6",
        "@types/react-hot-loader": "^4.1.0",
        "@types/react-intl": "^2.3.8",
        "@types/react-redux": "^6.0.3",
        "@types/react-router": "^4.0.28",
        "@types/react-router-dom": "^4.2.7",
        "@types/react-test-renderer": "^16.0.1",
        "@types/redux-devtools-extension": "^2.13.2",
        "@types/webpack-env": "^1.13.6",
        "codecov": "^3.0.2",
        "cross-env": "^5.2.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "husky": "^0.14.3",
        "imagemin-lint-staged": "^0.3.0",
        "lint-staged": "^7.2.0",
        "prettier": "^1.13.7",
        "react-test-renderer": "^16.4.1",
        "redux-devtools-extension": "^2.13.5",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2"
    },
    "sideEffects": false,
    "engines": {
        "node": ">=9.11.1"
    }
}
